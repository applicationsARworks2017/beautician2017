<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="50dp"
            android:layout_alignParentTop="true"
            >

    <EditText
        android:id="@+id/sub_name_edit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:paddingStart="5dp"
        android:focusable="false"
        android:layout_alignParentTop="true"
        android:background="@drawable/button_selecto" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:paddingStart="5dp"
                android:inputType="number"
                android:background="@drawable/button_selecto"
                android:layout_below="@+id/sub_name_edit"
                android:id="@+id/sub_pri_edit"/>


        <Button
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sub_pri_edit"
        android:id="@+id/delete"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_selector_qa"
        android:layout_alignParentStart="true"
        android:text="DELETE"
        />
    <Button
        android:id="@+id/save"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_below="@+id/sub_pri_edit"
        android:layout_alignParentEnd="true"
        android:text="SAVE"
        android:background="@drawable/button_selector_qa"
        android:layout_marginTop="20dp"
        />
        </RelativeLayout>

    </LinearLayout>
</ScrollView>
</RelativeLayout>