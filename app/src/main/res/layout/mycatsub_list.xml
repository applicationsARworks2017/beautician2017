<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:id="@+id/iv_letterView"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/iv_letterView"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:singleLine="true"
        android:id="@+id/c_name"
        android:text="Hello"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/c_name"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="15dp"
        android:singleLine="true"
        android:id="@+id/c_price"
        android:text="Price"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:layout_below="@id/flatChk"
        android:background="@color/colorPrimaryDark"></LinearLayout>

</RelativeLayout>