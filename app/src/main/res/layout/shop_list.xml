<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="5sp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peaople Parlour"
                android:id="@+id/Shopname"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check service details here"
                android:textColor="@color/colorPrimary"
                android:id="@+id/check_details"
                android:textStyle="italic"
                android:padding="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bangalore, India"
                android:id="@+id/shop_add"
                android:layout_marginTop="5dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/img_lin"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="50dp"
                    android:id="@+id/pic1"
                    android:scaleType="fitXY"
                    android:layout_height="40dp"
                    android:background="@drawable/customimage"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/pic2"
                    android:scaleType="fitXY"
                    android:background="@drawable/customimage"/>
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:id="@+id/pic3"
                    android:scaleType="fitXY"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/customimage"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$ 350 "
                    android:visibility="gone"
                    android:id="@+id/price_min"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" .  27 review"
                    android:id="@+id/rev_shop"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" .  15 K.M"
                    android:id="@+id/dis_shop"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style = "?android:attr/ratingBarStyleSmall"
                android:rating="4.5"
                android:id="@+id/rating"
                android:layout_marginTop="5dp"
                android:progressTint="@color/duskyellow"
                />
            <Button
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:id="@+id/reqButton"
                android:layout_marginTop="-10dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorPrimaryLight"
                android:textColor="@color/white"
                android:layout_marginBottom="2dp"
                android:text="Request"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>