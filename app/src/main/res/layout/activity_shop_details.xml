<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="beautician.com.sapplication.Activity.ShopDetails">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:fillViewport="true"
        android:measureAllChildren="false"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:background="@drawable/blanck"
                android:id="@+id/img1"/>
            <ImageView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:layout_margin="5dp"
                android:background="@drawable/blanck"
                android:id="@+id/img2"/>
            <ImageView
                android:layout_width="320dp"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:background="@drawable/blanck"
                android:layout_margin="5dp"
                android:id="@+id/img3"/>
        </LinearLayout>
    </HorizontalScrollView>


       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="SHOP NAME"
           android:textSize="15dp"
           android:textStyle="bold"
           android:textColor="@color/colorPrimaryLight"
           android:layout_gravity="center_horizontal"
           android:id="@+id/shop_name"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone Number"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:id="@+id/shop_phone"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_phone_black_24dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/colorPrimaryLight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:id="@+id/shop_email"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_email_white_24dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/colorPrimaryLight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:id="@+id/shop_address"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@mipmap/ic_location_on_white_24dp"
                    android:padding="5dp"
                    android:backgroundTint="@color/colorPrimaryLight"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reviews"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:id="@+id/shopreviews"/>
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style = "?android:attr/ratingBarStyleSmall"
                    android:rating="4.5"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/rating"
                    android:progressTint="@color/duskyellow"></RatingBar>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
