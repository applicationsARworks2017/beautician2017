<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="5dp"
        android:text="Remarks"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:id="@+id/remarks"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/remarks"
        android:layout_marginTop="3dp"
        android:layout_marginStart="15dp">
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/clock"
            android:background="@mipmap/ic_access_time_white_24dp"
            android:backgroundTint="@color/deep_background"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10: 15"
            android:layout_marginStart="10dp"
            android:id="@+id/datetime"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="$5 "
        android:id="@+id/debit"
        android:textColor="@color/red"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="40dp"
        android:text="$5 "
        android:id="@+id/credit"
        android:layout_below="@id/debit"
        android:textColor="@color/green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/deep_background"
        android:layout_below="@id/credit"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"></LinearLayout>

</RelativeLayout>